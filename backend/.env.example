# =====================================
# Backend Environment Variables
# =====================================

# Database Configuration
DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET="dashmonster-super-secret-jwt-key-development-only"
JWT_REFRESH_SECRET="dashmonster-refresh-secret-key-development-only"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Security
BCRYPT_ROUNDS=12

# Server Configuration
NODE_ENV=development
PORT=4000

# CORS Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
